<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Regression Suite">
    <listeners>
    <listener class-name="com.ayush.automation.listeners.ExtentListener"/>
        <listener class-name="com.ayush.automation.listeners.TestListener"/>
        <listener class-name="com.ayush.automation.retry.RetryListener"/>
    </listeners>

    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>

        <classes>
            <class name="com.ayush.automation.tests.LoginTest"/>
            <class name="com.ayush.automation.tests.PaymentTest"/>
        </classes>
    </test>
</suite>
